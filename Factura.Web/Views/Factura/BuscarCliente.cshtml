@model Factura.Core.Entities.Customer
@{
    ViewBag.Title = "BuscarCliente";
}

<h2>Buscar Cliente</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="panel panel-primary">
       <div class="panel-heading"><h3 class="panel-title">Selecciona Cliente</h3></div>
        <div class="panel-body">
        <div class="form-horizontal">
            
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                @Html.Label("Cliente", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("CustomerId", null, "Seleccione Cliente",new { @class = "form-control" })
                    
                    @Html.ValidationMessageFor(model => model.Id, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Agregar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>
    
}

