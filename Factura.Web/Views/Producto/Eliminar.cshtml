@model Factura.Core.Entities.Product
@{
    ViewBag.Title = "Eliminar";
}

<h2>Esta seguro de eliminiar el registro?</h2>
<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading"><h3 class="panel-title">Registro</h3></div>
        <div class="panel-body">
            <div>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Nombre")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt>
                        @Html.DisplayName("Descripcion")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt>
                        @Html.DisplayName("Unidad")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Unit)
                    </dd>
                    <dt>
                        @Html.DisplayName("Precio")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt>
                        @Html.DisplayName("Existencia")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Stock)
                    </dd>
                </dl>

                @using (Html.BeginForm("Eliminar", "Producto", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-default" }) |
                        <input type="submit" value="Confirmar" class="btn btn-danger" />

                    </div>
                }
            </div>

        </div>
    </div>


</div>
