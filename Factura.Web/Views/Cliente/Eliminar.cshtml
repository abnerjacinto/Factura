@model Factura.Core.Entities.Customer
@{
    ViewBag.Title = "Eliminar";
}

<h2>Esta seguro de eliminiar el registro?</h2>
<div class="form-horizontal">
    <div class="panel panel-primary">
        <div class="panel-heading"><h3 class="panel-title">Registro</h3></div>
        <div class="panel-body">
            <div>

                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayName("Nombre(s)")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.FirstName)
                    </dd>
                    <dt>
                        @Html.DisplayName("Apellido(s)")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.LastName)
                    </dd>
                    <dt>
                        @Html.DisplayName("NIT")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.NIT)
                    </dd>
                    <dt>
                        @Html.DisplayName("Direccion")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Address)
                    </dd>
                    <dt>
                        @Html.DisplayName("Telefono")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Phone)
                    </dd>
                    <dt>
                        @Html.DisplayName("Correo")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Email)
                    </dd>
                </dl>

                @using (Html.BeginForm("Eliminar", "Cliente", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        @Html.ActionLink("Cancelar", "Index", new { }, new { @class = "btn btn-default" }) |
                        <input type="submit" value="Confirmar" class="btn btn-danger" />

                    </div>
                }
            </div>

        </div>
    </div>


</div>
